extends layout
block content
    .container(style="margin-top:100px")
        h3 ADD POST
        ul.errors
            if (errors)
                each error,i in  errors
                    li.alert.alert-danger #{error.msg}
        form(method='post', action='/posts/add', enctype="multipart/form-data")
            .form-group
                label title:
                input.form-control(name='title', type='text')
            .form-group
                label category:
                select.form-control(name='category')
                    if (categories)
                        for category, i in categories
                            option(value='#{category.title}') #{category.title}
            .form-group
                label body:
                textarea.form-control(name='bodym', id='body')
            .form-group
                label mainimage
                input.form-control(name='mainimage' , type='file')
            .form-group
                label author
                select.form-control(name='author')
                    option(value="mohammadreza") mohammadreza
                    option(value="ali") ali
            input.btn.btn-default(name='submit', type='submit')
            script(src="/ckeditor/ckeditor.js")
            script| CKEDITOR.replace("body");
