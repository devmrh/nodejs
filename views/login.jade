extends layout
block content
    .container(style="margin-top:100px")
        h3 please login below
        form(method='post', action='/users/login', enctype="mutipart/form-data")
            .form-group
                label username:
                input.form-control(name='username', type='text', placeholder='enter username')
            .form-group
                label password:
                input.form-control(name='password', type='password', placeholder='enter pasword')
            input.btn.btn-default(name='submit', type='submit' , value='login')