extends layout
block content
    .container(style="margin-top:100px")
        h3 sign up now
        ul.errors
            if (errors)
                each error,i in  errors
                    li.alert.alert-danger #{error.msg}
        form(method='post', action='/users/register', enctype="multipart/form-data")
            .form-group
                label name:
                input.form-control(name='name', type='text', placeholder='enter name')
            .form-group
                label email:
                input.form-control(name='email', type='email', placeholder='enter email')
            .form-group
                label username:
                input.form-control(name='username', type='text', placeholder='enter usrename')
            .form-group
                label password:
                input.form-control(name='password1', type='text', placeholder='enter password')
            .form-group
                label confirm password:
                input.form-control(name='password2', type='text', placeholder='comfirm password')
            .form-group
                label profile picture
                input.form-control(name='profileimage' , type='file')
            input.btn.btn-default(name='submit', type='submit' , value='register!')